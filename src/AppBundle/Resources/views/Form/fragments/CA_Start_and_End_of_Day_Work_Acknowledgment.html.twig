const disableCalButton = function(el) {
    el.parent().find('input').prop('disabled', 'disabled');
}

const toggleRequired = function(target) {
    const targetElem = document.querySelector('[name$="' + target + '"]');
    if (targetElem.value.length > 0) {
        targetElem.classList.remove('ng-invalid');
        return; 
    }
    targetElem.classList.add('ng-invalid');
    return;
}

$(document).on('ready', function() {
    toggleRequired('Employee_Signature');
    toggleRequired('Date_display');
    // form is ready
    $(".modal").hide();
});

