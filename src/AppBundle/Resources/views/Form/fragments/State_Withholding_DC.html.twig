<main class="container-fluid">
  <header class="row vspace">
    <div class="col-lg-2">
      <img src="/assets/img/dc_logo.jpg" alt="" class="img-responsive">
    </div>
    <div class="col-lg-10">
      <h4 class="text-center">
        <div class="inline-block">
          <input type="text" class="lifesuite__text-input">
