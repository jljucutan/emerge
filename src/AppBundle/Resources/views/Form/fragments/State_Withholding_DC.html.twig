    <div class="row vspace">
      <div class="col-lg-5">
        First Name
        <input type="text" class="lifesuite__text-input">
      </div>
      <div class="col-lg-2">
        M.I.
        <input type="text" class="lifesuite__text-input">
      </div>
      <div class="col-lg-5">
        Last Name
        <input type="text" class="lifesuite__text-input">
      </div>
    </div>
    <div class="row vspace">
      <div class="col-lg-12">
        Home address (number, street and suite/apartment number if applicable)
        <input type="text" class="lifesuite__text-input">
      </div>
    </div>
    <div class="row vspace">
      <div class="col-lg-5">
        City
        <input type="text" class="lifesuite__text-input">
      </div>
      <div class="col-lg-1">
