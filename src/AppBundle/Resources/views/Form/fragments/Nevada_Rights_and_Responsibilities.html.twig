const disableCalButton = function(el) {
    "use strict";
    el.parent().find('input').prop('disabled', 'disabled');
}

$(document).on('ready', function() {
    "use strict";
    $('[data-checkbox-group]').on('change', function() {
        let checked = $(this).is(':checked');
        $('[data-checkbox-group="' + $(this).data('checkbox-group') + '"]').each(function(k,v) {
            v.checked = false;
        });
        $(this).prop('checked', checked);
    });

    // disabled date fields that should be disabled
    disableCalButton($('.date-disabled'));

    // form is ready
    $(".modal").hide();
});

angular.element(document).ready(function() {
    angular.element('#divLoader').remove();
});
</script>
