function ToggleSpecificAmount (object) {
    if (object.val() == "Yes") {
        $("#specific-amount").prop("disabled", true);
        $("#specific-amount").val("");
        $("#specific-amount").removeData("validation");
        $("#specific-amount").removeData("regex");
