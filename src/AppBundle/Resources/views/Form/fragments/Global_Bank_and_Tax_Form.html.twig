        validateField($("#specific-amount"), true);
        ClearAdditionalAccount ();
        $('#toggle-additional-account').css("display", "none");
        $('#additional-account').css("display", "none");
    }
    else if (object.val() == "No") {
        $("#specific-amount").prop("disabled", false);
        $("#specific-amount").data("validation", "required,regex");
        $("#specific-amount").data("regex", "^((([1-9]\\d{0,9})|[0])([.]\\d{1,2})?)$");
