$(document).on('ready', function() {
    $(".addNgInvalid").each(function() {
      $(".addNgInvalid").click(function() {
      var targetID = $(this).data('target');
      $('#' + targetID + ', [name$=".Date_display"]').addClass("ng-invalid");
      });
    });

    $(".removeNgInvalid").each(function() {
      $(".removeNgInvalid").click(function() {
      var targetID = $(this).data('target');
      if($("#"+targetID+"").val() != ""){
          $('#' + targetID + ', [name$=".Date_display"]').removeClass("ng-invalid");
      }
      });
    });
    $('input[type="radio"]').on('change', function() {
        const radioGroup = $('[name="' + $(this).prop('name') + '"]');
        let checked = false;
        radioGroup.each(function(k, v) {
            if (v.checked) {
                checked = v.checked;
            }
        });
        if (checked) {
            radioGroup.removeClass('required');
            return;
        }
        radioGroup.addClass('required');
    });
    $('input[type="radio"]').trigger('change');

    $(".modal").hide();
});

