<script>
ChangeCalendarIcons(); //for popup calendar
const thisForm = document.querySelector('[name="frmForm"]');
const disableCalButton = function(el) {
    "use strict";
    el.parent().find('input').prop('disabled', 'disabled');
}
if (window.NodeList && !NodeList.prototype.forEach) {
   NodeList.prototype.forEach = Array.prototype.forEach;
}
const toggleDisableTarget = function(controllersName, targetName, requiredVal) {
	"use strict";
	let shouldDisable = false;
	let hasChecked = false;
	thisForm.querySelectorAll('[name$=".' + controllersName + '"]').forEach(function(item) {
		if (!!item.checked) {
			hasChecked = true;
		}
		if (!!item.checked && item.value != requiredVal) {
			shouldDisable = true;
		}
	});
	const target = thisForm.querySelector('[name$=".' + targetName + '"]');
	if (!!shouldDisable || !hasChecked) {
		target.value = '';
		target.disabled = true;
		return;
	}
	target.disabled = false;
}
thisForm.querySelectorAll('.cal_and_button').forEach(function(item) {
	item.setAttribute('cellpadding', 0);
	item.setAttribute('cellspacing', 0);
});
thisForm.querySelectorAll('[name$=".a_nationality"]').forEach(function(radio) {
	radio.addEventListener('change', function() {
		toggleDisableTarget('a_nationality', 'a_nationality_text', 'Other');
	});
});
toggleDisableTarget('a_nationality', 'a_nationality_text', 'Other');
thisForm.querySelectorAll('[name$=".a_citizenship"]').forEach(function(radio) {
	radio.addEventListener('change', function() {
		toggleDisableTarget('a_citizenship', 'a_citizenship_text', 'Other');
	});
});
toggleDisableTarget('a_citizenship', 'a_citizenship_text', 'Other');
</script>
