<script type="text/javascript">
$(function() {
    var d = new Date();
    $('#signature-sign').on('click', function() {
        if (validateSignature('signature','eSignature1','fullName','modal','over','sv')) {
            $('.dateField').datepicker("setDate", d);
            $('#a01_Day').val(d.getDate());
            $('#a02_Month').val(function() {
                var m = ["January", "Febuary", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                return m[d.getMonth()];
            });
        }
        $('#a03_Year').val(d.getFullYear().toString().substr(-2));
        xbObj('eSignature1').value='';
    });
    $('#signature-clear').on('click', function() {
        xbObj('signature').value='';showHide('modal');showHide('over');xbObj('eSignature1').value='';
        $('.dateField').datepicker("setDate", null);
        $('#a01_Day, #a02_Month, #a03_Year').val('');
    });
});
</script>
