const toggleEnable = function(chkbx, target, requiredVal) {
    "use strict";
    let hasChecked  = false;
    let shouldEnable    = false;
    if (chkbx.checked) {
        hasChecked = true
        if (chkbx.value == requiredVal) {
            shouldEnable = true;
        }
    }
    if (shouldEnable) {
        target.disabled = false;
        target.focus();
        return;
    }
    target.value = '';
    target.disabled = true;
}
const checkboxSiblings = function(cb) {
    "use strict";
    let cbFamily = cb.getAttribute('name');
    let checked = cb.checked;
    thisForm.querySelectorAll('[name="' + cbFamily + '"]').forEach(function(c) {
        c.checked = false;
    });
    cb.checked = checked;
}
