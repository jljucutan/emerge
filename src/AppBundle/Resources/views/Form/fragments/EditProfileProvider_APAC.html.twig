        $('#TaskSummary_ButtonCancel').appendTo('#cancel').show();
        if (!isProfileCompleted) {
            $('#TaskSummary_ButtonSave').appendTo('#saveandcomplete').prop('onclick', null).show().text('Continue');
            $('#EUPDefaultSaveButton').appendTo('#save').show();
        }

        // load form when all set
        $('#EditProfile_wrapper').fadeIn();
        

        // set datepickers
        $('[name$="China_Current_Date"],[name$="China_Start_Date"]').datepicker({
            dateFormat: 'd MM yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+100"
        });
        $('[name$="China_Current_Date"]').datepicker({
            'onSelect': function(dateText, instance) {
                if($(this).val().length) {
                    focusInputLabel($(this));
                }
            }
        });
        if (!isProfileCompleted && "<$client.env.eval(date.now('%B %d, %Y').toString())>".length) {
            $('[name$="China_Current_Date"]').datepicker('setDate', new Date("<$client.env.eval(date.now('%B %d, %Y').toString())>"));
        }
        $('[name$="China_Start_Date"]').datepicker({
            'onSelect': function(dateText, instance) {
                if($(this).val().length) {
                    focusInputLabel($(this));
                }
            }
        });
        $('[name$="China_Start_Date"]').on('change', function() {
            focusInputLabel($('[name$="China_Start_Date_Plus"]').val(''));
            if ($(this).val().length) {
                // set Start Date plus 3 years
                var startDatePlus = $(this).datepicker("getDate");
                startDatePlus.setFullYear(startDatePlus.getFullYear() + 3); 
                focusInputLabel($('[name$="China_Start_Date_Plus"]').val(startDatePlus.getDate() + ' ' + months[startDatePlus.getMonth()] + ' ' + startDatePlus.getFullYear()));

                // set Start Date plus probation
                if($('[name$="ProbationPeriodTime"]').is(':checked')) {
                    var probationEndDate = $(this).datepicker("getDate");
                    probationEndDate.setMonth(probationEndDate.getMonth() + parseInt($('[name$="ProbationPeriodTime"]:checked').val())); 
                    focusInputLabel($('[name$="China_Probation_End_Date"]').val(probationEndDate.getDate() + ' ' + months[probationEndDate.getMonth()] + ' ' + probationEndDate.getFullYear()));
                }
            }
            setTimeout(function() {
                validateField($('[name$="China_Start_Date_Plus"]'));
                validateField($('[name$="China_Probation_End_Date"]'));
            }, 200);
        });
        $('[name$="ProbationPeriodTime"]').on('change', function() {
            $('[name$="China_Start_Date"]').trigger('change');
        });
        if (!isProfileCompleted && (!$('[name$="China_Start_Date"]').val().length || "<$client.env.eval(Date.Format('<$client.env.eval(Date.parse(client.tEventDates_Date_2.Value))>','%B %d %Y'))>".length)) {
