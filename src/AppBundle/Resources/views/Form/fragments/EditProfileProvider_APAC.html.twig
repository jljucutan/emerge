                .datepicker('setDate', new Date("<$client.env.eval(Date.Format('<$client.env.eval(Date.parse(client.tEventDates_Date_2.Value))>','%B %d %Y'))>"))
                .trigger('change');
        }

        // focus style text and select fields
        $('form').on('focus', 'input[type="text"], select', function() {
