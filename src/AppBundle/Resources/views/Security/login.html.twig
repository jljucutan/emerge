{% extends "AppBundle:Security:base.html.twig" %}

{% block fos_user_content %}
    <div class="center-block form-container">
        {{ parent() }}
        <div class="authentication-header text-center">
            <h1>Authentication <i class="glyphicon glyphicon-lock"></i>
            </h1>
        </div>

        <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label class=" control-label col-md-3 col-sm-3 col-xs-12" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-6 checkbox text-right">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        Remember me
                    </label>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <input class="btn btn-default btn-sm" type="submit" id="_submit" name="_submit" value="Submit" />
                </div>
            </div>
            <div class="form-group">
            </div>
        </form>
        {% if error %}
            <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
    </div>
{% endblock fos_user_content %}
