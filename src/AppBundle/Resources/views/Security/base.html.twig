{% extends 'AppBundle:Layout:layout.html.twig' %}

{% block title %}{{ parent() }} | Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/assets/css/dashboard.css') }}">
{% endblock %}

{% block body_attributes %}
    <body class="body-security">
{% endblock %}

{% block content %}
    <div class="container">
        {% block fos_user_content %}
            {# % if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('app_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('app_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif % #}

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="panel panel-info panel-{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock fos_user_content %}
    </div>
{% endblock content %}
